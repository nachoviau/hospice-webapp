rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura a todos (para mostrar imágenes)
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Permitir escritura solo a usuarios autenticados en la carpeta partes
    match /partes/{allPaths=**} {
      allow write: if request.auth != null 
        && request.resource.contentType.matches('image/.*')
        && request.resource.size < 10 * 1024 * 1024; // Máximo 10MB
    }
  }
} 